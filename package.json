{
  "name": "vscode-json-editor",
  "displayName": "Simple Json",
  "description": "JSON editor with validation and formatting options",
  "version": "0.0.2",
  "publisher": "Rizwan Ansari",
  "license": "MIT",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsonEditor.validate",
        "title": "Validate JSON"
      },
      {
        "command": "jsonEditor.prettify",
        "title": "Prettify JSON"
      },
      {
        "command": "jsonEditor.minify",
        "title": "Minify JSON"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^14.x.x",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.13.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "jsonc-parser": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rizansari/VSCodeSimpleJson"
  }
}